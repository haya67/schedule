<h3>スケジュール詳細</h3>

<table>
  <tr>
    <th>タイトル</th>
    <td><%= @user.title %></td>
  </tr>

  <tr>
    <th>開始日</th>
    <td><%= @user.start %></td>
  </tr>

  <tr>
    <th>終了日</th>
    <td><%= @user.finish %></td>
  </tr>

  <tr>
    <th>投稿日時</th>
    <td><%= @user.created_at.to_s(:datetime_jp) %></td>
  </tr>

  <tr>
    <th>終日</th>
    <td><% if @user.all_day == "1" %>
         ○
     <% end %></td>
  </tr>

  <tr>
    <th>メモ</th>
    <td><%= @user.content %></td>
  </tr>
</table>

<div>
  <ul>
    <li><%= link_to "ユーザー情報一覧に戻る", :users %></li>
  </ul>
  <ul>
    <li><%= link_to"スケジュールを編集する", :edit_user %></li>
  </ul>
</div>