<h3>ユーザー編集</h3>
 
<%= form_with scope: @post, url: edit_post_path do |f| %>
<table>
    <tr>
      <th><%= f.label :title , "タイトル" %></th>
      <td><%= f.text_field :title %></td>
    </tr>

    <tr>
      <th><%= f.label :start ,"開始日" %></th>
      <td><%= f.date_field :start, value:@post.start %></td>
    </tr>

    <tr>
      <th><%= f.label :finish ,"終了日" %></th>
      <td><%= f.date_field :finish, value:@post.finish %></td>
    </tr>

    <tr>
      <th><%= label_tag :all_day, "終日" %></th>
      <td><%= check_box_tag :all_day %></td>

    </tr>



    <tr>
      <th><%= f.label :content ,"スケジュールメモ" %></th>
      <td><%= f.text_area :content %></td>
    </tr>
</table>
  
    <div>
      <ul>
        <li><%= f.submit "編集を完了する"%></li>
        <li><%= link_to "ユーザー情報一覧に戻る", :posts %></li>
      </ul>
    </div>
  <% end %>      